// standards //

// colors

OFF_WHITE = #FDFDFD
LIGHT_GRAY = #bbb
FOREST_GREEN = #456855
MID_GREEN = #5B8F5C
COFFEE_BROWN = #603920
LIGHT_PINK = #F1CBE1

// greater movements
.cf:before,
.cf:after
  content " "
  display table

.cf
  *zoom 1
  &:after
    clear both

.justify-align
  text-align justify

.pull-right
  float right

.pull-left
  float left

// global
html, body
  margin 0
  padding 0
  background FOREST_GREEN
  font-family 'Lato', Helvetica, sans-serif

ul
  list-style none

ol li
  margin 5px 0px

table
  text-align left
  padding 30px
  th, td
  padding 0 30px 0 30px

header
    padding-top 10px
    text-align center

footer
  height 200px
  margin-top 100px
  position relative
  bottom 0
  width 100%
  text-align center
  word-spacing 3px
  font-weight bold
  .copy
    letter-spacing 1px
  .built
    small, a
      letter-spacing 1px
      font-size 11px
      text-transform uppercase

div.container
  margin-top 100px

// typography

h1, h2, h3, h4, h5, h6, p, a, input
  color LIGHT_GRAY

h1, h1 a
  letter-spacing 5px
  font-weight 600
  font-size 25px
  margin 0px 0px 0px 0px
  text-transform uppercase
  text-decoration none
.instr h1 a
  text-decoration underline

h2, label
  margin 10px 0 40px 0
  font-weight 200
  text-transform uppercase

a
  font-weight 400
  letter-spacing 0px
  text-decoration underline
  -webkit-transition color 0.2s linear
  -moz-transition color 0.2s linear
  -ms-transition color 0.2s linear
  -o-transition color 0.2s linear
  transition color 0.2s linear
  &:hover
    color LIGHT_PINK


::-webkit-input-placeholder
    color LIGHT_GRAY
:-moz-placeholder
    color LIGHT_GRAY
    opacity 1
::-moz-placeholder
    color LIGHT_GRAY
    opacity 1
:-ms-input-placeholder
    color LIGHT_GRAY

input:focus::-webkit-input-placeholder
    color LIGHT_PINK
input:focus:-moz-placeholder
    color LIGHT_PINK
    opacity 1
input:focus::-moz-placeholder
    color LIGHT_PINK
    opacity 1
input:focus:-ms-input-placeholder
    color LIGHT_PINK

.search
  margin-bottom 20px
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  padding 0px 20px
  height 80px
  -webkit-transition 0.2s linear
  -moz-transition 0.2s linear
  -ms-transition 0.2s linear
  -o-transition 0.2s linear
  transition 0.2s linear
  font-size 20px
  border 4px solid LIGHT_GRAY
  background none
  outline none
  :focus
    background none
    outline none

input[type=text]
  width 78%
  margin-right 2%
  &:focus
    color LIGHT_PINK
    border 4px solid LIGHT_PINK
    background none

input[type=submit]
  width 20%
  cursor pointer
  &:hover, &:focus
    color LIGHT_PINK
    border 4px solid LIGHT_PINK
    background none


// else //

.map-wrapper 
  iframe
    height 500px
    width 100%
  .loader
    margin 0 auto
    text-align center
    img
      margin-top 150px

#map
  height 500px

.instr
  margin-top 20px
  color LIGHT_GRAY
  div
    margin 5px 0px
    text-transform uppercase
    font-weight bold
    color OFF_WHITE
    font-size 16px !important

